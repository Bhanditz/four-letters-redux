<?xml version="1.0" encoding="utf-8"?>
<nz.bradcampbell.fourletters.ui.renderables.GameContainerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_standard"
    >
    <TextView
        android:id="@+id/answer"
        android:textSize="48sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/topLetter"
        android:layout_marginTop="@dimen/padding_standard"
        style="@style/Letter"
        />
    <Button
        android:id="@+id/leftLetter"
        style="@style/Letter"
        />
    <Button
        android:id="@+id/rightLetter"
        style="@style/Letter"
        />
    <Button
        android:id="@+id/bottomLetter"
        style="@style/Letter"
        />
    <nz.bradcampbell.fourletters.ui.renderables.TimeRemainingView
        android:id="@+id/timeRemaining"
        android:layout_marginTop="@dimen/padding_standard"
        android:indeterminate="false"
        android:layout_width="200dp"
        android:layout_height="8dp"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        />
</nz.bradcampbell.fourletters.ui.renderables.GameContainerView>